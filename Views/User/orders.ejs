    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl font-bold mb-8 animate-fade-up">My Orders</h1>

        <!-- Tabs -->
        <div class="bg-white rounded-full p-1 mb-8 shadow-sm animate-fade-up flex justify-between max-w-2xl">
            <button class="flex-1 px-6 py-3 text-sm font-medium rounded-full bg-gray-900 text-white" onclick="filterOrders('all')">
                All orders
                <span class="ml-1 bg-white text-black rounded-full px-2 py-0.5 text-xs" id="all-count">0</span>
            </button>
            <button class="flex-1 px-6 py-3 text-sm font-medium rounded-full bg-gray-900 text-white" onclick="filterOrders('shipping')">
                On Shipping
                <span class="ml-1 bg-white text-black rounded-full px-2 py-0.5 text-xs" id="shipping-count">0</span>
            </button>
            <button class="flex-1 px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900" onclick="filterOrders('arrived')">
                Arrived
                <span class="ml-1 bg-gray-100 rounded-full px-2 py-0.5 text-xs" id="arrived-count">0</span>
            </button>
            <button class="flex-1 px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900" onclick="filterOrders('canceled')">
                Canceled
                <span class="ml-1 bg-gray-100 rounded-full px-2 py-0.5 text-xs" id="canceled-count">0</span>
            </button>
        </div>

        <!-- Orders Container -->
        <div id="orders-container" class="space-y-6">
            <!-- Orders will be dynamically inserted here -->
        </div>
    </main>

