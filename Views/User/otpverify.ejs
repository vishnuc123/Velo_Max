<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="relative font-inter antialiased min-h-screen bg-slate-50 flex flex-col justify-center">
        <div class="w-full max-w-6xl mx-auto px-4 md:px-6 py-24">
            <div class="flex justify-center">
                <div class="max-w-md mx-auto bg-white p-8 sm:p-10 rounded-xl shadow text-center">
                    <header class="mb-8">
                        <h1 class="text-2xl font-bold mb-1">Email Verification</h1>
                        <p class="text-sm text-slate-500">Enter the 6-digit verification code that was sent to your phone number.</p>
                    </header>
                    <% if (locals.message) { %>
                        <div id="message-box">
                          <p class="text-red-600"><%= locals.message %></p>
                        </div>
                    <% } %>
                    <form id="otp-form" action="/verifyAccount" method="post" onsubmit="combineOtp()">
                        <div class="flex items-center justify-center gap-3 mb-4">
                            <!-- Individual OTP inputs -->
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                            <input type="text" class="otp-input w-12 h-12 text-center font-bold bg-slate-100 border rounded outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-xl" pattern="\d*" maxlength="1" required />
                        </div>
                        <input type="hidden" id="full-otp" name="otp" />

                        <!-- Timer -->
                        <div class="text-sm text-slate-500 mb-4">
                            <h2 class="text-lg">OTP will expire on</h2>
                            <p id="countdown" class="font-medium">3:00</p>
                        </div>
                        
                        <!-- Submit button -->
                        <button type="submit" class="w-full bg-indigo-500 text-white text-sm font-medium rounded-lg py-2.5 hover:bg-indigo-600 focus:ring-2 focus:ring-indigo-300 transition">
                            Verify Account
                        </button>
                    </form>
                    <div class="text-sm text-slate-500 mt-4">Didn't receive code? <a href="/resendOtp" class="font-medium text-indigo-500 hover:text-indigo-600">Resend</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function combineOtp() {
            const otpInputs = document.querySelectorAll('.otp-input');
            let otpValue = '';
            otpInputs.forEach(input => otpValue += input.value);
            document.getElementById('full-otp').value = otpValue;
        }
    </script>
        <script src="/User/js/otpverify.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
    
    
</body>
</html>
