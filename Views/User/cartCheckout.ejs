<%- include("partials/header") %>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> 
<script defer src="https://cdn.jsdelivr.net/npm/apexcharts" type="module"></script> 
<script src="/User/js/cartCheckout.js"></script>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 3px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-track {
    @apply bg-gray-100;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb {
    @apply bg-gray-300 rounded-full;
  }
  
  input[type="number"]::-webkit-inner-spin-button, 
  input[type="number"]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  
  input[type="number"] {
    -moz-appearance: textfield;
  }
</style>

<%- include("partials/navbar") %>

<!-- Start of Body -->
<body>
  <div class="min-h-screen bg-gray-50 py-40">
    <div class="container mx-auto px-4 py-8 max-w-7xl">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Left Column - Form Fields -->
        <div class="lg:col-span-2 space-y-8 custom-scrollbar">
          <!-- Cart Items -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Your Cart</h2>
            <div class="cart-container">
              <!-- Cart items will be dynamically injected here -->
            </div>
          </div>

          <!-- Contact Section -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Contact Information</h2>
            <div class="space-y-2">
              <input type="email" placeholder="Email" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <p class="text-sm text-gray-500">You'll receive order status updates via email</p>
            </div>
          </div>

          <!-- Delivery Section -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Delivery Address</h2>
            <div id="existing-addresses" class="space-y-4">
              <!-- Addresses rendered here -->
            </div>
            
            <button id="add-address-btn" class="w-full py-3 px-4 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors">
              Add New Address
            </button>

            <!-- Add Address Form -->
            <div id="add-address-form" class="hidden space-y-4 mt-4">
              <form id="address-form" method="POST" action="/userAddress" class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                  <input type="text" id="first-name" name="firstName" placeholder="First name" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <input type="text" id="last-name" name="lastName" placeholder="Last name" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <input type="text" id="address" name="address" placeholder="Address" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <div class="grid grid-cols-2 gap-4">
                  <input type="text" id="postal-code" name="postalCode" placeholder="Postal code" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <input type="text" id="city" name="city" placeholder="City" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <input type="number" id="phone-number" name="phoneNumber" placeholder="Phone number" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <button id="save-address-btn" class="w-full py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors">
                  Save Address
                </button>
              </form>
            </div>
          </div>

          <!-- Shipping Method -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Shipping Method</h2>
            <form id="shipping-form" class="space-y-3">
              <label class="flex items-center justify-between p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                <div class="flex items-center gap-3">
                  <input type="radio" name="shipping" class="w-4 h-4 text-blue-500" checked>
                  <span class="font-medium">Standard Shipping</span>
                </div>
                <span class="font-medium">Free</span>
              </label>
              <label class="flex items-center justify-between p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                <div class="flex items-center gap-3">
                  <input type="radio" name="shipping" class="w-4 h-4 text-blue-500">
                  <span class="font-medium">Express Shipping</span>
                </div>
                <span class="font-medium">â‚¹80.00</span>
              </label>
            </form>
          </div>

          <!-- Payment Method -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Payment Method</h2>
            <div class="space-y-3">
              <label class="flex items-center justify-between p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                <div class="flex items-center gap-3">
                  <input type="radio" name="payment" value="credit-card" class="w-4 h-4 text-blue-500">
                  <span class="font-medium">Credit Card</span>
                </div>
                <img src="/User/images/chekout/maxresdefault.jpg" alt="Credit Card" class="h-8">
              </label>
              <label class="flex items-center justify-between p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                <div class="flex items-center gap-3">
                  <input type="radio" name="payment" value="paypal" class="w-4 h-4 text-blue-500">
                  <span class="font-medium">PayPal</span>
                </div>
                <img src="/User/images/chekout/images.png" alt="PayPal" class="h-8">
              </label>
              <label class="flex items-center justify-between p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                <div class="flex items-center gap-3">
                  <input type="radio" name="payment" value="cash-on-delivery" class="w-4 h-4 text-blue-500" checked>
                  <span class="font-medium">Cash On Delivery</span>
                </div>
                <img src="/User/images/chekout/cash-on-delivery-solid-icons-simple-stock-illustration-stock-vector.jpg" alt="COD" class="h-8 w-8">
              </label>
            </div>
          </div>

          <!-- Billing Address -->
          <div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
            <h2 class="text-xl font-semibold">Billing Address</h2>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="w-4 h-4 rounded text-blue-500">
              <span class="font-medium">Same as shipping address</span>
            </label>
          </div>
        </div>

        <!-- Right Column - Order Summary -->
        <div class="lg:col-span-1">
          <div class="sticky top-8 bg-white p-6 rounded-lg shadow-sm space-y-6">
            <h2 class="text-xl font-semibold">Order Summary</h2>

            <!-- Totals -->
            <div class="space-y-3 pt-4 border-t">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-medium order-subtotal">$0.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Shipping</span>
                <span class="font-medium order-shipping">$29.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Tax</span>
                <span class="font-medium order-tax">$2.90</span>
              </div>
            </div>

            <!-- Total -->
            <div class="flex justify-between items-center pt-4 border-t">
              <span class="font-medium text-lg">Total</span>
              <span class="font-semibold text-lg order-total">$31.90</span>
            </div>

            <!-- Confirm Button -->
            <button class="w-full py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors">
              Confirm Order
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<!-- End of Body -->
<%- include("partials/footer") %>
