<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/User/css/login.css" />
    <script defer src="/User/js/login.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-10 px-4">
        <div class="flex flex-col md:flex-row items-center justify-center md:justify-between bg-white shadow-lg rounded-lg overflow-hidden">
            <!-- Left side (Logo and Image) -->
            <div class="flex flex-col flex-1 items-center p-6">
                <!-- Logo -->
                <div class="logo mb-4">
                    <img
                        src="/User/images/login/logo original.jpg"
                        alt="Logo"
                        class="w-32 mx-auto"
                    />
                </div>
                <!-- Image -->
                <div class="bg">
                    <img
                        src="/User/images/login/professional-cyclist-woman.jpg"
                        alt="Cyclist"
                        class="w-full h-auto object-cover"
                    />
                </div>
            </div>
            <!-- Right side (Login Form) -->
            <div class="flex flex-col flex-1 p-6 md:p-12 bg-gray-50">
                <form action="/" method="post" class="w-full max-w-sm mx-auto">
                    <h1 class="text-3xl font-bold mb-6 text-center">Login</h1>

                    <!-- Message display area -->
                    <% if (locals.message) { %>
                        <div class="mb-4 text-center">
                            <p class="text-red-600"><%= locals.message %></p>
                        </div>
                    <% } %>

                    <!-- Email input -->
                    <div class="mb-4">
                        <div class="relative w-full">
                            <h1 class="text-sm" id="errorEmail"></h1>
                        </div>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="Enter your email"
                            class="w-full border border-1 rounded-md p-3"
                            onkeyup="ValidationEmail()"
                        />
                    </div>
                    
                    <!-- Password input -->
                    <div class="mb-4 relative">
                        <div class="relative w-full">
                            <h1 class="text-sm" id="errorPass"></h1>
                        </div>
                        
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="Enter your password"
                            class="w-full border border-gray-300 rounded-md p-3"
                            onkeyup="valiedationPassword()"
                        />
                   
                    </div>
                     <!-- Show Password Checkbox -->
    <div class="flex items-center mt-2">
        <input
            type="checkbox"
            id="showPassword"
            class="mr-2"
            onclick="togglePassword()"
        />
        <label for="showPassword" class="text-sm text-gray-600">Show Password</label>
    </div>
                    

                    <!-- Login button -->
                    <button
                        class="w-full bg-blue-500 text-white rounded-md py-3 px-4 mt-2 hover:bg-blue-600"
                        type="submit"
                    >
                        Login
                    </button>

                    <!-- Forgot password link -->
                    <div class="text-right mt-3">
                        <a href="#" class="text-blue-500 hover:underline">Forgot Password?</a>
                    </div>

                    <!-- Google login button -->
                    <div class="flex justify-between items-center mt-6">
                        <a
                            href="/google"
                            class="flex items-center border border-gray-300 rounded-md p-2 bg-white hover:bg-gray-100 w-full mr-2 justify-center"
                        >
                            <img
                                src="/User/images/login/icons8-google-48.png"
                                alt="Google"
                                class="w-6 h-6 mr-2"
                            />
                            <span class="text-sm">Sign in with Google</span>
                        </a>
                    </div>

                    <!-- Signup link -->
                    <div class="text-center mt-6">
                        <p class="text-sm">
                            Donâ€™t have an account?
                            <a href="/register" class="text-blue-500 hover:underline">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
    // Function to toggle password visibility
    function togglePassword() {
        const passwordInput = document.getElementById("password");
        const showPasswordCheckbox = document.getElementById("showPassword");

        if (showPasswordCheckbox.checked) {
            passwordInput.type = "text"; // Show the password
        } else {
            passwordInput.type = "password"; // Hide the password
        }
    }
    </script>
</body>
</html>
