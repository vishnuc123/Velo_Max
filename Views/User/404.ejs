<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found | Cycle Shop</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #D3D3D3, #A9A9A9); /* Greyish gradient background */
            overflow: hidden;
        }
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            color: #fff; /* White text color */
            text-align: center;
        }
        h1 {
            font-size: 8em;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        p {
            font-size: 1.5em;
            margin: 20px 0;
        }
        .bike {
            position: relative;
            width: 200px;
            height: 100px;
            margin: 40px 0;
        }
        .wheel {
            position: absolute;
            width: 80px;
            height: 80px;
            border: 15px solid #fff;
            border-radius: 50%;
            bottom: 0;
        }
        .wheel-left {
            left: 0;
        }
        .wheel-right {
            right: 0;
        }
        .frame {
            position: absolute;
            width: 180px;
            height: 3px;
            background: #fff;
            top: 40px;
            left: 10px;
            transform: rotate(-15deg);
        }
        .seat {
            position: absolute;
            width: 30px;
            height: 10px;
            background: #fff;
            top: 25px;
            left: 70px;
            transform: rotate(-15deg);
        }
        .handlebar {
            position: absolute;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 3px solid #fff;
            border-bottom: none;
            top: 10px;
            right: 40px;
            transform: rotate(45deg);
        }
        .pedal {
            position: absolute;
            width: 20px;
            height: 20px;
            background: #fff;
            border-radius: 50%;
            bottom: 20px;
            left: 90px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #fff;
            color: #4682B4;
            text-decoration: none;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .btn:hover {
            background-color: #4682B4;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.2);
        }
        .clouds {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }
        .cloud {
            position: absolute;
            background: rgba(255,255,255,0.7);
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>404</h1>
        <p>Oops! Looks like you've taken a wrong turn on your cycling adventure.</p>
        <div class="bike">
            <div class="wheel wheel-left"></div>
            <div class="wheel wheel-right"></div>
            <div class="frame"></div>
            <div class="seat"></div>
            <div class="handlebar"></div>
            <div class="pedal"></div>
        </div>
        <a href="/" class="btn">Ride Back Home</a>
    </div>
    <div class="clouds" id="clouds"></div>

    <script>
        function createCloud() {
            const cloud = document.createElement('div');
            cloud.classList.add('cloud');
            const size = Math.random() * 100 + 50;
            cloud.style.width = `${size}px`;
            cloud.style.height = `${size}px`;
            cloud.style.top = `${Math.random() * 100}%`;
            cloud.style.left = `-${size}px`;
            return cloud;
        }

        function animateCloud(cloud) {
            const duration = Math.random() * 20 + 10;
            cloud.style.animation = `moveCloud ${duration}s linear infinite`;
        }

        function addClouds() {
            const cloudsContainer = document.getElementById('clouds');
            for (let i = 0; i < 10; i++) {
                const cloud = createCloud();
                cloudsContainer.appendChild(cloud);
                animateCloud(cloud);
            }
        }

        addClouds();

        // Animate bike
        const bike = document.querySelector('.bike');
        const wheels = document.querySelectorAll('.wheel');
        const pedal = document.querySelector('.pedal');

        function animateBike() {
            bike.style.animation = 'bikeBounce 0.5s ease-in-out infinite alternate';
            wheels.forEach(wheel => {
                wheel.style.animation = 'wheelSpin 2s linear infinite';
            });
            pedal.style.animation = 'pedalSpin 1s linear infinite';
        }

        animateBike();
    </script>

    <style>
        @keyframes moveCloud {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(calc(100vw + 200px));
            }
        }
        @keyframes bikeBounce {
            0% {
                transform: translateY(0);
            }
            100% {
                transform: translateY(-10px);
            }
        }
        @keyframes wheelSpin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
        @keyframes pedalSpin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</body>
</html>
