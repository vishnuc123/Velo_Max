<%- include("partials/header") %>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> 
<script defer src="https://cdn.jsdelivr.net/npm/apexcharts" type="module"></script> 




    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        .pulse {
            animation: pulse 2s infinite;
        }
        .share-popup {
            clip-path: circle(0% at 90% 10%);
            transition: clip-path 0.4s ease-out;
        }
        
        .share-popup.active {
            clip-path: circle(150% at 90% 10%);
        }

        .product-card {
            opacity: 100;
            transform: translateY(20px);
        }
    </style>

<body class="bg-gray-50">
    <%- include("partials/navbar") %>
    <div class="container mx-auto px-4 py-40 max-w-7xl">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-semibold text-gray-800">My Wishlist</h1>
            <div class="relative">
                <button id="shareBtn" class="text-gray-600 hover:text-gray-800 transition-colors">
                    <i class="fas fa-share-alt text-xl"></i>
                </button>
                <div id="sharePopup" class="share-popup absolute right-0 top-8 bg-white shadow-lg rounded-lg p-4 w-64 z-10">
                    <h3 class="text-gray-800 font-medium mb-3">SHARE IT</h3>
                    <div class="flex gap-4 justify-center">
                        <a href="#" class="text-blue-600 hover:text-blue-700">
                            <i class="fab fa-facebook-f text-xl"></i>
                        </a>
                        <a href="#" class="text-blue-400 hover:text-blue-500">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-red-600 hover:text-red-700">
                            <i class="fab fa-pinterest-p text-xl"></i>
                        </a>
                        <a href="#" class="text-blue-500 hover:text-blue-600">
                            <i class="fab fa-linkedin-in text-xl"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6" id="productGrid">
            <!-- Product cards will be inserted here by JavaScript -->
        </div>
    </div>

    <script src="/User/js/wishlist.js"></script>
</body>
</html>

