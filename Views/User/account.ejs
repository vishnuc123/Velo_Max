<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account - Veloretti</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> 
  <script defer src="https://cdn.jsdelivr.net/npm/apexcharts" type="module"></script> 
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/User/js/account.js"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          animation: {
            'slide-in': 'slideIn 0.5s ease-out',
            'fade-in': 'fadeIn 0.5s ease-out',
            'scale-in': 'scaleIn 0.3s ease-out',
            'rotate-in': 'rotateIn 0.5s ease-out',
          },
          keyframes: {
            slideIn: {
              '0%': { transform: 'translateX(-100%)', opacity: '0' },
              '100%': { transform: 'translateX(0)', opacity: '1' },
            },
            fadeIn: {
              '0%': { opacity: '0' },
              '100%': { opacity: '1' },
            },
            scaleIn: {
              '0%': { transform: 'scale(0.8)', opacity: '0' },
              '100%': { transform: 'scale(1)', opacity: '1' },
            },
            rotateIn: {
              '0%': { transform: 'rotate(-10deg) scale(0.8)', opacity: '0' },
              '100%': { transform: 'rotate(0) scale(1)', opacity: '1' },
            },
          },
        },
      },
    }
  </script>
</head>
<body class="bg-gray-100 min-h-screen">

   <!-- Header -->
   <header class="bg-white shadow-sm animate-fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-xl font-semibold tracking-wider animate-slide-in">VELO MaX</a>
          <nav class="hidden md:flex space-x-8">
            <a href="/account" class="text-gray-900 border-b-2 border-gray-900">Profile</a>
            <a href="/address" class="text-gray-600 hover:text-gray-900 transition-colors duration-200">Address</a>
            <a href="/orders" class="text-gray-600 hover:text-gray-900 transition-colors duration-200">Orders</a>
            <a href="/wallet" class="text-gray-600 hover:text-gray-900 transition-colors duration-200">Wallet</a>
          </nav>
        </div>

        <div class="flex items-center space-x-4">
          <button class="p-2 rounded-full hover:bg-gray-100 transition-colors duration-200" aria-label="User Profile">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          <a href="/dashboard/products" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition-colors duration-200">
            Go to store
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Profile Section (unchanged) -->
  <main class="py-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-1 gap-8 mb-8">
      <% userDetails.forEach((user) => { %>
      <div class="md:col-span-1">
        <div class="bg-white rounded-lg shadow-sm p-6 animate-fade-in">
          <h2 class="text-xl font-semibold"><%= `${user.firstname} ${user.lastname}` %></h2>
          <p class="text-gray-600"><%= user.email %></p>
        </div>
        <div class="space-y-2 mt-4">
          <!-- Buttons to open specific modals -->
          <button onclick="toggleModal('editModal')" class="w-full text-left px-4 py-2 rounded hover:bg-gray-500 transition-colors duration-200">Edit Profile</button>
          <button onclick="toggleModal('securityModal')" class="w-full text-left px-4 py-2 rounded hover:bg-gray-500 transition-colors duration-200">Security Settings</button>
          <button onclick="toggleModal('notificationsModal')" class="w-full text-left px-4 py-2 rounded hover:bg-gray-500 transition-colors duration-200">Notifications</button>
        </div>
      </div>
      <% }); %>
    </div>
  </main>

  <!-- Redesigned Modals -->
  <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center hidden">
    <div class="bg-white rounded-lg p-8 w-full max-w-lg transform transition-all duration-300 ease-in-out animate-scale-in">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Edit Profile</h2>
        <button onclick="toggleModal('editModal')" class="text-gray-500 hover:text-gray-800 transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="updateForm" class="space-y-6">
        <div class="animate-fade-in" style="animation-delay: 100ms;">
          <label for="firstname" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
          <input id="firstname" name="firstname" type="text" class="w-full border-2 border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="<%= userDetails[0].firstname %>" required>
        </div>
        <div class="animate-fade-in" style="animation-delay: 200ms;">
          <label for="lastname" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
          <input id="lastname" name="lastname" type="text" class="w-full border-2 border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="<%= userDetails[0].lastname %>" required>
        </div>
        <div class="animate-fade-in" style="animation-delay: 300ms;">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input id="email" type="email" class="w-full border-2 border-gray-300 px-4 py-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" value="<%= userDetails[0].email %>" readonly>
        </div>
        <button type="submit" class="w-full bg-gray-900 text-white px-6 py-3 rounded-md hover:bg-gray-600 transition-colors duration-200 transform hover:scale-105 animate-fade-in" style="animation-delay: 400ms;">Save Changes</button>
      </form>
      
    </div>
  </div>

  <div id="securityModal" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center hidden">
    <div class="bg-white rounded-lg p-8 w-full max-w-lg transform transition-all duration-300 ease-in-out animate-rotate-in">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Security Settings</h2>
        <button onclick="toggleModal('securityModal')" class="text-gray-500 hover:text-gray-800 transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="securityForm" class="space-y-6">
        <!-- Old Password Field -->
        <div class="animate-fade-in" style="animation-delay: 100ms;">
            <label for="old-pass" class="block text-sm font-medium text-gray-700 mb-1">Old Password</label>
            <div class="relative">
                <input
                    id="old-password"
                    type="password"
                    class="w-full border-2 px-4 py-2 rounded-md transition-all duration-200 focus:outline-none"
                    oninput="checkOldPassword()"
                />
                <button
                    type="button"
                    class="absolute right-3 top-3 text-gray-500 focus:outline-none"
                    onclick="togglePasswordVisibility('old-password', 'old-password-eye')"
                >
                    <span id="old-password-eye" class="material-icons">visibility</span>
                </button>
            </div>
            <span id="old-password-error" class="text-red-500 text-sm mt-1 hidden"></span>
        </div>
    
        <!-- New Password Field -->
        <div class="animate-fade-in" style="animation-delay: 200ms;">
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
            <div class="relative">
                <input
                    id="password"
                    type="password"
                    class="w-full border-2 px-4 py-2 rounded-md transition-all duration-200 focus:outline-none"
                />
                <button
                    type="button"
                    class="absolute right-3 top-3 text-gray-500 focus:outline-none"
                    onclick="togglePasswordVisibility('password', 'password-eye')"
                >
                    <span id="password-eye" class="material-icons">visibility</span>
                </button>
            </div>
            <span id="password-error" class="text-red-500 text-sm mt-1 hidden"></span>
        </div>
    
        <!-- Submit Button -->
        <button
            type="submit"
            id="submit-btn"
            class="w-full bg-gray-900 text-white px-6 py-3 rounded-md hover:bg-gray-600 transition-colors duration-200 transform hover:scale-105 animate-fade-in"
            style="animation-delay: 300ms;"
        >
            Update Security Settings
        </button>
    </form>
    
    
    
    
    </div>
  </div>

  <div id="notificationsModal" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center hidden">
    <div class="bg-white rounded-lg p-8 w-full max-w-lg transform transition-all duration-300 ease-in-out animate-scale-in">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Notifications</h2>
        <button onclick="toggleModal('notificationsModal')" class="text-gray-500 hover:text-gray-800 transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form class="space-y-6">
        <div class="flex items-center justify-between p-4 bg-gray-100 rounded-lg animate-fade-in" style="animation-delay: 100ms;">
          <label for="emailNotif" class="text-sm font-medium text-gray-700">Email Notifications</label>
          <div class="relative inline-block w-12 mr-2 align-middle select-none transition duration-200 ease-in">
            <input type="checkbox" name="emailNotif" id="emailNotif" class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer"/>
            <label for="emailNotif" class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-300 cursor-pointer"></label>
          </div>
        </div>
        <div class="flex items-center justify-between p-4 bg-gray-100 rounded-lg animate-fade-in" style="animation-delay: 200ms;">
          <label for="smsNotif" class="text-sm font-medium text-gray-700">SMS Notifications</label>
          <div class="relative inline-block w-12 mr-2 align-middle select-none transition duration-200 ease-in">
            <input type="checkbox" name="smsNotif" id="smsNotif" class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer"/>
            <label for="smsNotif" class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-300 cursor-pointer"></label>
          </div>
        </div>
        <button class="w-full bg-gray-900 text-white px-6 py-3 rounded-md hover:bg-gray-600 transition-colors duration-200 transform hover:scale-105 animate-fade-in" style="animation-delay: 300ms;">Save Preferences</button>
      </form>
    </div>
  </div>


  <script>
    function togglePasswordVisibility(inputId, iconId) {
    const input = document.getElementById(inputId);
    const icon = document.getElementById(iconId);

    if (input.type === 'password') {
        input.type = 'text';
        icon.textContent = 'visibility_off'; // Change to "eye with slash"
    } else {
        input.type = 'password';
        icon.textContent = 'visibility'; // Change back to "eye"
    }
}

    function toggleModal(modalId) {
      const modal = document.getElementById(modalId);
      modal.classList.toggle('hidden');
    }




  </script>

</body>
</html>

